$default_network_interface = `ip route | awk '/^default/ {printf "%s", $5; exit 0}'`

Vagrant.configure("2") do |config|
  config.vm.define "instance" do |instance|
    instance.vm.hostname = "debian"
    # config.vm.box = "debian/bookworm64"    
    config.vm.box = "ubuntu/jammy64"

    config.vm.network "forwarded_port", id: "ssh", host: 3022, guest: 22

    instance.vm.provider "virtualbox" do |v|
      v.memory = 4096
      v.cpus = 8
    end

    instance.vm.provision :shell, :inline => "sudo sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/g' /etc/ssh/sshd_config; sudo systemctl restart sshd;", run: "always"


    # if false
  #   instance.vm.provision "shell", inline: <<-SCRIPT          
